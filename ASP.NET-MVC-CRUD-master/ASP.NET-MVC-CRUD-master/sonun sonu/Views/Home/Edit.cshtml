@model sonun_sonu.Models.Customer

<h2>Edit Worker</h2>

<form method="post" action="@Url.Action("Update", "Home")">
    <input type="hidden" name="WM_ID" value="@Model.WM_ID"style="width: 450px;" />

    <div class="form-group">
        <label>WM Name</label>
        <input type="text" name="WM_NAME" value="@Model.WM_NAME" class="form-control" style="width: 450px;" />
    </div>

    <div class="form-group">
        <label>WM Surname</label>
        <input type="text" name="WM_SURNAME" value="@Model.WM_SURNAME" class="form-control" style="width: 450px;" />
    </div>

    <div class="form-group">
        <label>WM Code</label>
        <input type="text" name="WM_CODE" value="@Model.WM_CODE" class="form-control" style="width: 450px;" />
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
